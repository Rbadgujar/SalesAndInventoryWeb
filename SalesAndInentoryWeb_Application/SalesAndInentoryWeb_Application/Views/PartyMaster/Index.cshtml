                <a class="btn btn-success pull-right row" style="margin-top:6.5px;" href=@Url.Action("AddOrEdit","PartyMaster")><i class="fa fa-plus"></i>Add New Party</a>
                <a class="btn btn-info pull-left row" style="margin-top:6.5px; " onclick="PopupForm('@Url.Action("PartyGroup","PartyMaster")')"><i class="fa fa-plus"></i>Add Party Group</a>
                    @*<a class="btn btn-info row pull-right" style="margin-top:6.5px; margin-right:30px; " href="@Url.Action("Index","BankToBank")"><i class="fa fa-plus"></i>Bank To Bank </a>*@

            </div>
        </div>
    </nav>

    <nav class="navbar navbar-default ">
        <div class="container-fluid">
            <div class="collapse navbar-collapse ">
                <table id="partytype" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th>Party Name</th>
                            <th>ContactNo</th>
                            <th>Billing Add</th>
                            <th>EmailID</th>
                            <th>State</th>
                            <th>Opening Bal</th><th>As Of Date</th><th>Party Type</th>
                            <th>Shipping Add</th>
                            <th></th>
                        </tr>
