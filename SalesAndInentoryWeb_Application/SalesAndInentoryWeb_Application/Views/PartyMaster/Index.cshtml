@model IEnumerable<SalesAndInentoryWeb_Application.tbl_PartyMasterSelectResult>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/ideal.cshtml";
}


<div class="container" style="height:100%; width:100%;">

    <nav class="navbar navbar-default " style="background-color:white">
        <br />
        <nav class="navbar navbar-default " style="background-color:white;height:60px; border:none">
            <div class="container-fluid">
                <div class="collapse navbar-collapse ">
                    <label class="pull-left" style="margin-left:18px; color:blue; margin-top:-8.5px;"><h3>All Parties</h3></label>
                    <a class="btn btn-success pull-right row" style="margin-top:12.5px; margin-right:-11px;" href=@Url.Action("AddOrEdit","PartyMaster")><i class="fa fa-plus"></i>Add New Party</a>
                    <a class="btn btn-info pull-right row" style="margin-top:12.5px;margin-right:20px; " onclick="PopupForm('@Url.Action("PartyGroup","PartyMaster")')"><i class="fa fa-plus"></i>Add Party Group</a>
                    @*<a class="btn btn-info row pull-right" style="margin-top:6.5px; margin-right:30px; " href="@Url.Action("Index","BankToBank")"><i class="fa fa-plus"></i>Bank To Bank </a>*@

                </div>
            </div>
        </nav>
        <div class="container-fluid">
            <div class="collapse navbar-collapse ">
                <table id="partytype" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th>PartiesID</th>
                            <th>Party Name</th>
                            <th>ContactNo</th>
                            <th>Billing Add</th>
                            <th>EmailID</th>
                            <th>State</th>
                            <th>OpeningBal</th>
                            <th>Party Type</th>
                            <th>Shipping Add</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </nav>

</div>
<link href="~/Content/DataTables/css/dataTables.bootstrap.css" rel="stylesheet" />
@section scripts{
    <script src="~/scripts/DataTables/jquery.dataTables.min.js"></script>
    <script src="~/scripts/DataTables/dataTables.bootstrap.min.js"></script>

    <script>
        var Popup, dataTable;
        $(document).ready(function () {
            dataTable = $("#partytype").DataTable({
                "ajax": {
                    "url": "/PartyMaster/ShowData",
                    "type": "GET",
                    "datatype": "json"
                },
                "columns": [
                    { "data": "PartiesID"},
                    { "data": "PartyName" },
                    { "data": "ContactNo" },
                    { "data": "BillingAddress" },
                    { "data": "EmailID" },
                    { "data": "State" },
                    { "data": "OpeningBal" },
                    {"data" :"PartyType"},
                    { "data": "ShippingAddress" },
                 
                    {"data": "PartiesID", "render": function (data) {
                        return "<a class='btn btn-default btn-sm' href=('@Url.Action("AddOrEdit","PartyMaster")/" + data + "')><i class='fa fa-pencil'></i> Edit</a><a class='btn btn-danger btn-sm' style='margin-left:5px' onclick=Delete("+data+")><i class='fa fa-trash'></i> Delete</a>";
                    },
                        "orderable": false,
                        "searchable":false,
                        "width":"150px"
                    }
                ],
                "language": {

                    "emptyTable" : "No data found, Please click on <b>Add New</b> Button"
                }
            });
        });

        function PopupForm(url) {
            var formDiv = $('<div/>');
            $.get(url)
            .done(function (response) {
                formDiv.html(response);
                Popup = formDiv.dialog({
                    autoOpen: true,
                    resizable: false,
                    title: 'Fill Parties Details',
                    height: 480,
                    width: 600,
                    close: function () {
                        Popup.dialog('destroy').remove();
                    }

                });
            });
        }

        function SubmitForm(form) {
            $.validator.unobtrusive.parse(form);
            if($(form).valid()){
                $.ajax({
                    type : "POST",
                    url : form.action,
                    data : $(form).serialize(),
                    success : function (data) {
                        if(data.success)
                        {
                            Popup.dialog('close');
                            dataTable.ajax.reload();

                            $.notify(data.message,{
                                globalPosition :"top center",
                                className : "success"
                            })

                        }
                    }
                });
            }
            return false;
        }

        function Delete(id) {
            if(confirm('Are You Sure to Delete this Employee Record ?'))
            {
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("Delete","PartyMaster")/' + id,
                    success: function (data) {
                        if (data.success)
                        {
                            dataTable.ajax.reload();
                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "success"
                            })
                        }
                    }
                });
            }
        }
    </script>
}

