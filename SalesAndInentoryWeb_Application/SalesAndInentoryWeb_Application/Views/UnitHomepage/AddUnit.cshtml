@model SalesAndInentoryWeb_Application.Models.tbl_UnitMaster
@{
    Layout = null;
}

@using (Html.BeginForm("AddUnit", "UnitHomepage", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    <div>
        @Html.HiddenFor(model => model.UnitID)
        <div class="form-group">
            @Html.LabelFor(model => model.UnitName, new { @class = "control-label" })
            @Html.EditorFor(model => model.UnitName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.UnitName)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.SubUnitName, new { @class = "control-label" })
            @Html.EditorFor(model => model.SubUnitName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.SubUnitName)
        </div>
       
       
        
        <div class="form-group">
            <input type="submit" value="Submit" class="btn btn-primary" />
            <input type="reset" value="Reset" class="btn" />
        </div>
    </div>
}

