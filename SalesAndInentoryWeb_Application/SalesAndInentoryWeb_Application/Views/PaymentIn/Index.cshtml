<link href="~/Content/DataTables/css/dataTables.bootstrap.css" rel="stylesheet" />
@section scripts{
    <script src="~/scripts/DataTables/jquery.dataTables.min.js"></script>
    <script src="~/scripts/DataTables/dataTables.bootstrap.min.js"></script>

    <script>
        var Popup, dataTable;
        $(document).ready(function () {

            var date = new Date();
            var day = date.getDate();
            var month = date.getMonth() + 1;
            var year = date.getFullYear();
            if (month < 10) month = "0" + month;
            if (day < 10) day = "0" + day;
            var today = year + "-" + month + "-" + day;
            $("#todate").attr("value", today);
            $("#fromdate").attr("value", today);


            dataTable =  $("#paymentin").DataTable({
                "ajax": {
                    "url": "/PaymentIn/ShowData",
                    data: { 'par': '1' },
                    "type": "GET",
                    "datatype": "json"
                },
                "columns": [
                    {"data":"ID"},
                    { "data": "PartyName" },
                    { "data": "PaymentType" },                 
                    { "data": "Date"},
                     { "data": "ReceivedAmount" },                   
             

                    {"data":"ID" , "render" : function (data) {
                        return "<a class='btn btn-default btn-sm' onclick=PopupForm('@Url.Action("Updateview", "PaymentIn")/" + data + "')><i class='fa fa-pencil'></i> Edit</a><a class='btn btn-danger btn-sm' style='margin-left:5px' onclick=Delete("+data+")><i class='fa fa-trash'></i> Delete</a><a class='btn btn-default btn-sm' href='@Url.Action("Report", "PaymentIn")/" + data + "'><i class='fa fa-pencil'></i> Print</a>";
                    },
                        "orderable": false,
                        "searchable":false,
                        "width":"150px"
                    }

                ],
                "language": {

                    "emptyTable" : "No data found, Please click on <b>Add New</b> Button"
                }
            });


            $("#todate").change(function () {

                var table1 = $('#paymentin').DataTable();
                table1.destroy();
                var da = new Date();
                var date = $("#todate").val();
                var date2 = $("#fromdate").val();
                par = 1;

                dataTable = $("#paymentin").DataTable({
                    "ajax": {
                        "url": "/PaymentIn/ShowData",
                        data: { 'date': date, 'par': '0', 'date2': date2 },
                        "type": "GET",
                        "datatype": "json"
                    },
                    "columns": [
                        { "data": "ID" },
                        { "data": "PartyName" },
                        { "data": "PaymentType" },
                        { "data": "Date" },
                        { "data": "ReceivedAmount" },


                        {
                            "data": "ID", "render": function (data) {
                                return "<a class='btn btn-default btn-sm' onclick=PopupForm('@Url.Action("AddOrEdit", "PaymentIn")/" + data + "')><i class='fa fa-pencil'></i> Edit</a><a class='btn btn-danger btn-sm' style='margin-left:5px' onclick=Delete(" + data + ")><i class='fa fa-trash'></i> Delete</a>";
                            },
                            "orderable": false,
                            "searchable": false,
                            "width": "150px"
                        }

                    ],
                    "language": {

                        "emptyTable": "No data found, Please click on <b>Add New</b> Button"
                    }
                });

            });



              $("#fromdate").change(function () {

                  var table1 = $('#paymentin').DataTable();
                table1.destroy();
                var da = new Date();
                  var date = $("#todate").val(); 
                var date2 = $("#fromdate").val();
                par = 1;

                dataTable = $("#paymentin").DataTable({
                    "ajax": {
                        "url": "/PaymentIn/ShowData",
                        data: { 'date': date, 'par': '0', 'date2': date2 },
                        "type": "GET",
                        "datatype": "json"
                    },
                    "columns": [
                        { "data": "ID" },
                        { "data": "PartyName" },
                        { "data": "PaymentType" },
                        { "data": "Date" },
                        { "data": "ReceivedAmount" },


                        {
                            "data": "ID", "render": function (data) {
                                return "<a class='btn btn-default btn-sm' onclick=PopupForm('@Url.Action("AddOrEdit", "PaymentIn")/" + data + "')><i class='fa fa-pencil'></i> Edit</a><a class='btn btn-danger btn-sm' style='margin-left:5px' onclick=Delete(" + data + ")><i class='fa fa-trash'></i> Delete</a>";
                            },
                            "orderable": false,
                            "searchable": false,
                            "width": "150px"
                        }

                    ],
                    "language": {

                        "emptyTable": "No data found, Please click on <b>Add New</b> Button"
                    }
                });

            });














        });


        function PopupForm(url) {
            var formDiv = $('<div/>');
            $.get(url)
            .done(function (response) {
                formDiv.html(response);

                Popup = formDiv.dialog({
                    autoOpen: true,
                    resizable: false,
                    title: 'Fill PaymentIn Details',
                    height: 400,
                    width: 700,
                    close: function () {
                        Popup.dialog('destroy').remove();
                    }

                });
            });
        }

        function SubmitForm(form) {
            $.validator.unobtrusive.parse(form);
            if($(form).valid()){
                $.ajax({
                    type : "POST",
                    url : form.action,
                    data : $(form).serialize(),
                    success : function (data) {
                        if(data.success)
                        {
                            Popup.dialog('close');
                            dataTable.ajax.reload();

                            $.notify(data.message,{
                                globalPosition :"top center",
                                className : "success"
                            })

                        }
                    }
                });
            }
            return false;
        }




        function Delete(id) {
            if(confirm('Are You Sure to Delete this Record ?'))
            {
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("Delete","PaymentIn")/' + id,
                    success: function (data) {
                        if (data.success)
                        {
                            dataTable.ajax.reload();

                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "success"
                            })

                        }
                    }

                });
            }
        }
    </script>
}

