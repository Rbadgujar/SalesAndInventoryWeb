@model SalesAndInentoryWeb_Application.tbl_LoanBank

@{
    Layout =null;
}
<style>
    #div {
        border-radius: 5px;
        background-color: #f2f2f2;
        padding: 20px;
    }
</style>
    @using (Html.BeginForm("AddOrEditPopUp", "LoanAccount", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
    {
        <div id="div">
        <div class="row">
            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.AccountName, new { @class = "control-label" })
                @Html.EditorFor(model => model.AccountName, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Account Name.....", required = "Requried" } })
                @Html.ValidationMessageFor(model => model.AccountName)

            </div>

            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.CurrentBal, new { @class = "control-label" })
                @Html.EditorFor(model => model.CurrentBal, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Current Bal.....", required = "Requried" } })
                @Html.ValidationMessageFor(model => model.CurrentBal)
            </div>
            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.AccountNo, new { @class = "control-label" })
                @Html.EditorFor(model => model.AccountNo, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Account No.....", required = "Requried" } })
                @Html.ValidationMessageFor(model => model.AccountNo)
            </div>
        </div>
        <div class="row">         
            <div class="form-group col-md-4 ">
                @Html.LabelFor(model => model.FirmName, new { @class = "control-label" })
                @Html.EditorFor(model => model.FirmName, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Company Name.....", required = "Requried" } })
                @Html.ValidationMessageFor(model => model.FirmName)
            </div>
            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.BalAsOf, new { @class = "control-label" })
                @Html.EditorFor(model => model.BalAsOf, new { htmlAttributes = new { @class = "form-control",@type="date", required = "Requried" } })
                @Html.ValidationMessageFor(model => model.BalAsOf)
            </div>
            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.Description, new { @class = "control-label" })
                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Description.....", required = "Requried" } })
                @Html.ValidationMessageFor(model => model.Description)
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-4 ">
                @Html.LabelFor(model => model.LoanAmount, new { @class = "control-label" })
                @Html.EditorFor(model => model.LoanAmount, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Loan Amount.....", required = "Requried" } })
                @Html.ValidationMessageFor(model => model.LoanAmount)
            </div>
            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.Duration, new { @class = "control-label" })
                @Html.EditorFor(model => model.Duration, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Duration.....", required = "Requried" } })
                @Html.ValidationMessageFor(model => model.Duration)
            </div>
            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.Interest, new { @class = "control-label" })
                @Html.EditorFor(model => model.Interest, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Intrest Rate.....", required = "Requried" } })
                @Html.ValidationMessageFor(model => model.Interest)
            </div>
        </div>
            <div class="row">
                <div class="form-group col-md-4 ">
                    @Html.LabelFor(model => model.ProcessingFees, new { @class = "control-label" })
                    @Html.EditorFor(model => model.ProcessingFees, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Processing Fee.....", required = "Requried" } })
                    @Html.ValidationMessageFor(model => model.ProcessingFees)
                </div>
                <div class="form-group col-md-4 ">
                    @Html.LabelFor(model => model.PaidBy, new { @class = "control-label" })
                    <select name="cars" id="PaidBy" class="form-control">
                        <option value="Select Paid By">Select Paid By</option>
                        <option value="Cash">Cash</option>
                        <option value="Cheque">Cheque</option>
                    </select>
                    @Html.ValidationMessageFor(model => model.PaidBy)
                </div>
                <div class="form-group col-md-4">
                    @Html.LabelFor(model => model.LoanReceive, new { @class = "control-label" })
                    <select name="cars" id="LoanReceive" class="form-control">
                        <option value="Select Loan Receive">Select Loan Receive</option>
                        <option value="Cash">Cash</option>
                        <option value="Cheque">Cheque</option>
                    </select>
                    @Html.ValidationMessageFor(model => model.LoanReceive)
                </div>
            </div>
            <div class="row">               
                <div class="form-group col-md-4">
                    @Html.LabelFor(model => model.LendarBank, new { @class = "control-label" })
                    @Html.EditorFor(model => model.LendarBank, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Lender Bank.....", required = "Requried" } })
                    @Html.ValidationMessageFor(model => model.LendarBank)
                </div>             
            </div>
            <div class="form-group footer">
                <input type="submit" value="Submit" class="btn btn-primary pull-right" />
                <input type="reset" value="Reset" class="btn btn-info pull-right" style="margin-right:10px;" />              
            </div>
            <br>
       </div>
                      
    }
<script src="~/scripts/jquery-1.12.4.min.js"></script>
<script type="text/javascript">
    var date = new Date();
    var day = date.getDate();
    var month = date.getMonth() + 1;
    var year = date.getFullYear();
    if (month < 10) month = "0" + month;
    if (day < 10) day = "0" + day;
    var today = year + "-" + month + "-" + day;
    $("#BalAsOf").attr("value", today);
</script>


