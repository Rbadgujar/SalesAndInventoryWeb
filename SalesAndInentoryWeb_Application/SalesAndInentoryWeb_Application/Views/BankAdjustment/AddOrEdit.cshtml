
@model SalesAndInentoryWeb_Application.Models.tbl_BankAdjustment

@{
    Layout = null;
}

@using (Html.BeginForm("AddOrEdit", "BankAdjustment", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.ID)
    <div class="form-group">
        @Html.LabelFor(model => model.BankAccount, new { @class = "control-label" })
        @Html.EditorFor(model => model.BankAccount, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Bank Account....." } })
        @Html.ValidationMessageFor(model => model.BankAccount)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.EntryType, new { @class = "control-label" })
       @{
		   List<SelectListItem> listItems = new List<SelectListItem>();
		   listItems.Add(new SelectListItem
		   {
			   Text = "Credit",
			   Value = "Credit"
		   });
		   listItems.Add(new SelectListItem
		   {
			   Text = "Debit",
			   Value = "Debit",
			   Selected = true
		   });

    }
        <div class="form-control">
    @Html.DropDownListFor(model => model.EntryType, listItems, new { htmlAttributes = new { @class = "form-control" } })

        @Html.ValidationMessageFor(model => model.EntryType)
            </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Amount, new { @class = "control-label" })
        @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Amount....." } })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Date, new { @class = "control-label" })
        <div class="input-group">
            @Html.TextBoxFor(model => model.Date, new { @type = "date", @class = "control-label" })
        </div>
       
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Description, new { @class = "control-label" })
        @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" , placeholder = "Enter Opening Bal....."} })
    </div>

    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
        <input type="reset" value="Reset" class="btn" />
    </div>
}
