    <nav class="navbar navbar-default ">
        <div class="container-fluid">
            <div class="collapse navbar-collapse ">
                <table id="bankadjustment" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th>Bank Account</th>
                            <th>Entry Type</th>
                            <th>Amount</th>
