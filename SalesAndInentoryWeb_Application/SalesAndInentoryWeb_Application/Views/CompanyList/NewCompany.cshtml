@model SalesAndInentoryWeb_Application.Models.tble_NewCompany
@{
    Layout = null;
}

@using (Html.BeginForm("NewCompany", "CompanyList", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    <div>
        @Html.HiddenFor(model => model.ID)
        <div class="form-group">
            @Html.LabelFor(model => model.CompanyName, new { @class = "control-label" })
            @{
                List<SelectListItem> listItems = new List<SelectListItem>();
                listItems.Add(new SelectListItem
                {
                    Text = "Credit",
                    Value = "Credit"
                });
                listItems.Add(new SelectListItem
                {
                    Text = "Debit",
                    Value = "Debit",
                    Selected = true
                });

            }
            </div>
            <div class="form-control">
                @Html.DropDownListFor(model => model.CompanyName, listItems, "-- Select Entry Type --", new { htmlAttributes = new { @class = "form-control" } })

                @Html.ValidationMessageFor(model => model.CompanyName)
            </div>
        <div class="form-group">
            @Html.LabelFor(model => model.ContactNo, new { @class = "control-label" })
            @Html.EditorFor(model => model.ContactNo, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ContactNo)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.EmailId, new { @class = "control-label" })
            @Html.EditorFor(model => model.EmailId, new { htmlAttributes = new { @class = "form-control" } })
        </div>
       
        <div class="form-group">
            @Html.LabelFor(model => model.ReferralCode, new { @class = "control-label" })
            @Html.EditorFor(model => model.ReferralCode, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <div class="form-group">
            <input type="submit" value="Login" class="btn btn-primary" />
        </div>
    </div>
}

