                datatype: 'JSON',
                contentType: 'application/json;charset=utf-8',
                data: JSON.stringify(objpurchase),
                url: '/PurchaseBill/AddPurchase',
                success: function (data) {
                    if (data.status == true) {
                        alter(data.message);
                    }
                },
