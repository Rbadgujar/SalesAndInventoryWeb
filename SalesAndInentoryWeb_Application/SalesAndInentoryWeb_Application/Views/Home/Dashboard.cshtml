    <script>
        $(document).ready(function () {
        
            $.getJSON("/PurchaseBill/record", function (data)
            {
                var Total = [];
                var BillDate = [];
                for (var i = 0; i < data.length; i++)
                {
                    Total.push(data[i].Total);
                    BillDate.push(data[i].BillDate);
                }

                Highcharts.chart('container', {
                    chart: {
                        type: 'spline'
                    },
                    title: {
                        text: 'Monthly Average Sale'
                    },
                    subtitle: {
                        text: 'Source: WorldClimate.com'
                    },
                    xAxis: {
                        categories: BillDate
                    },
                    yAxis: {
                        title: {
                            text: 'Temperature'
                        },
                        labels: {
                            formatter: function () {
                                return this.value + '°';
                            }
                        }
                    },
                    tooltip: {
                        crosshairs: true,
                        shared: true
                    },
                    plotOptions: {
                        spline: {
                            marker: {
                                radius: 4,
                                lineColor: '#666666',
                                lineWidth: 1
                            }
                        }
                    },                   
                    series: [{
                        name: 'Tokyo',
                        marker: {
                            symbol: 'square'
                        }, 
                        data: [Total]                  
                    }]
                });
        });
       
        });
    </script>
