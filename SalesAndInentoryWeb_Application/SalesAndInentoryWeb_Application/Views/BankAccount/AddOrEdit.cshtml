
@model SalesAndInentoryWeb_Application.Models.tbl_BankAccount
@{
   Layout = null;
}

@using (Html.BeginForm("AddOrEdit", "BankAccount", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.ID)
    <div class="form-group">
        @Html.LabelFor(model => model.BankName, new { @class = "control-label" })
        @Html.EditorFor(model => model.BankName, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.BankName)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.AccountName, new { @class = "control-label" })
        @Html.EditorFor(model => model.AccountName, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.AccountName)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.AccountNo, new { @class = "control-label" })
        @Html.EditorFor(model => model.AccountNo, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.OpeningBal, new { @class = "control-label" })
        @Html.EditorFor(model => model.OpeningBal, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Date, new { @class = "control-label" })
        <div class="input-group">
            @Html.TextBoxFor(model => model.Date, new { @type = "date", @class = "control-label" })
        </div>
    </div>

    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
        <input type="reset" value="Reset" class="btn" />
    </div>
}
