@model SalesAndInentoryWeb_Application.Models.tbl_ItemServicemaster
@{
    Layout = "~/Views/Shared/ideal.cshtml";
}

<!DOCTYPE html>
<br>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddOrEdit</title>
    @Html.DevExpress().GetStyleSheets(
        new StyleSheet { ExtensionSuite = ExtensionSuite.NavigationAndLayout },
        new StyleSheet { ExtensionSuite = ExtensionSuite.Editors }
    )
    @Html.DevExpress().GetScripts(
        new Script { ExtensionSuite = ExtensionSuite.NavigationAndLayout },
        new Script { ExtensionSuite = ExtensionSuite.Editors }
    )
</head>

<body>
    @using (Html.BeginForm())
    {

        <div class="panel panel-primary container" style="height:100%; width:100%;">
            <br>
            <div class="panel-heading text-center"><h4>Item Service</h4></div>
            <div class="panel border-box">
                <br>
                <nav class="navbar navbar-default ">
                    <div class="container-fluid">
                        <div class="collapse navbar-collapse ">
                            <br>
                            <div class="row">
                                <div class="form-group col-md-4">
                                    @Html.DevExpress().Label(settings =>
                               {
                                   settings.Style["font-weight"] = "bold";

                                   settings.Name = "Label1";
                                   settings.Text = "Item Name   :";


                               }).GetHtml()
                                    @Html.DevExpress().TextBoxFor(m => m.ItemName, settings =>
                               {
                                   settings.ControlStyle.CssClass = "form-control";
                                   settings.Properties.NullText = "Enter Item Name...";
                               }).GetHtml()
                                </div>
                                <div class="form-group col-xs-4">
                                    @Html.DevExpress().Label(settings =>
                               {
                                   settings.Style["font-weight"] = "bold";

                                   settings.Name = "Label3";
                                   settings.Text = "Sale Price :";

                               }).GetHtml()
                                    @Html.DevExpress().TextBoxFor(m => m.SalePrice, settings =>
                               {
                                   settings.Properties.NullText = "Enter Sale Price...";
                                   settings.ControlStyle.CssClass = "form-control";
                               }).GetHtml()
                                </div>
                                <div class="form-group col-xs-3 text-center">
                                    @Html.DevExpress().Label(settings =>
                               {
                                   settings.Style["font-weight"] = "bold";

                                   settings.Name = "Label35";
                                   settings.Text = "Image :";
                               }).GetHtml()
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-xs-4">
                                    @Html.DevExpress().Label(settings =>
                               {
                                   settings.Style["font-weight"] = "bold";

                                   settings.Name = "Label2";
                                   settings.Text = "HSN Code   :";

                               }).GetHtml()
                                    @Html.DevExpress().TextBoxFor(m => m.ItemHSNCOde, settings =>
                               {
                                   settings.Properties.NullText = "Enter HSN Code...";
                                   settings.ControlStyle.CssClass = "form-control";
                               }).GetHtml()
                                  
                                </div>

                                <div class="form-group col-xs-4">
                                    @Html.DevExpress().Label(settings =>
                               {
                                   settings.Style["font-weight"] = "bold";

                                   settings.Name = "Label90";
                                   settings.Text = "Date :";

                               }).GetHtml()
                                    @Html.DevExpress().DropDownEditFor(m => m.TaxType, settings =>
                               {
                                   settings.Properties.NullText = "Select Tax Type";
                                   settings.ControlStyle.CssClass = "form-control";

                                   settings.SetDropDownWindowTemplateContent(c =>
                                   {
                                       ViewContext.Writer.Write("DropDown content");
                                   });
                               }).GetHtml()
                                   
                                </div>

                            </div>

                            <div class="row">
                                <div class="form-group col-xs-4">
                                    @Html.DevExpress().Label(settings =>
                               {
                                   settings.Style["font-weight"] = "bold";

                                   settings.Name = "Label4";
                                   settings.Text = "Unit   :";


                               }).GetHtml()
                                    @Html.DevExpress().DropDownEditFor(m => m.Unit, settings =>
                               {
                                   settings.Properties.NullText = "Select Unit";
                                   settings.ControlStyle.CssClass = "form-control";

                                   settings.SetDropDownWindowTemplateContent(c =>
                                   {
                                       ViewContext.Writer.Write("DropDown content");
                                   });
                               }).GetHtml()
                                </div>
                                <div class="form-group col-xs-4">
                                    @Html.DevExpress().Label(settings =>
                               {
                                   settings.Style["font-weight"] = "bold";
                                   settings.Name = "Label7";
                                   settings.Text = "Tax Rate   :";
                               }).GetHtml()

                                    @Html.DevExpress().DropDownEditFor(m => m.TaxRate, settings =>
                               {
                                   settings.Properties.NullText = "Select Tax Rate";
                                   settings.ControlStyle.CssClass = "form-control";

                                   settings.SetDropDownWindowTemplateContent(c =>
                                   {
                                       ViewContext.Writer.Write("DropDown content");
                                   });
                               }).GetHtml()
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-xs-4">
                                    @Html.DevExpress().Label(settings =>
                               {
                                   settings.Style["font-weight"] = "bold";
                                   settings.Name = "Label89";
                                   settings.Text = "Sub Unit   :";
                               }).GetHtml()

                                    @Html.DevExpress().TextBoxFor(m => m.Subunit, settings =>
                               {
                                   settings.Properties.NullText = "";
                                   settings.ControlStyle.CssClass = "form-control";
                               }).GetHtml()


                                </div>
                                <div class="form-group col-xs-4">
                                    @Html.DevExpress().Label(settings =>
                               {
                                   settings.Style["font-weight"] = "bold";
                                   settings.Name = "Label79";
                                   settings.Text = "Description   :";
                               }).GetHtml()

                                    @Html.DevExpress().TextBoxFor(m => m.Description, settings =>
                               {
                                   settings.Properties.NullText = "Enter Description...";
                                   settings.ControlStyle.CssClass = "form-control";
                               }).GetHtml()
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-xs-4">
                                    @Html.DevExpress().Label(settings =>
                               {
                                   settings.Style["font-weight"] = "bold";
                                   settings.Name = "Label909";
                                   settings.Text = "Item Code    :";
                               }).GetHtml()

                                    @Html.DevExpress().TextBoxFor(m => m.ItemCode, settings =>
                               {
                                   settings.Properties.NullText = "";
                                   settings.ControlStyle.CssClass = "form-control";
                               }).GetHtml()


                                </div>
                                <div class="form-group col-xs-4">
                                    @Html.DevExpress().Label(settings =>
                               {
                                   settings.Style["font-weight"] = "bold";
                                   settings.Name = "Label798";
                                   settings.Text = "Item Category   :";
                               }).GetHtml()

                                    @Html.DevExpress().DropDownEditFor(m => m.Category, settings =>
                               {
                                   settings.Properties.NullText = "Select Category";
                                   settings.ControlStyle.CssClass = "form-control";

                                   settings.SetDropDownWindowTemplateContent(c =>
                                   {
                                       ViewContext.Writer.Write("DropDown content");
                                   });
                               }).GetHtml()
                                </div>
                            </div>
                        </div>
                    </div>
                </nav>
                <div>
                    <input type="submit" value="Submit" class="btn btn-primary pull-right" style="margin-right:12px; margin-top:2px; " />
                    <a class="text-right btn btn-success" href=@Url.Action("Index","Service")>Back To List</a>
                </div>
            </div>
        </div>

    }
</body>
</html>
