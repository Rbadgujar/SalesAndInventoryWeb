            $("#Paid").val(find);
        };
        function cal() {
            var mrp = $("#sp").val();
            var qty = $("#qty").val();
            var total = mrp * qty;
            $("#ca").val(total);
        }

        function cal1() {
            var mrp = $("#sp").val();
