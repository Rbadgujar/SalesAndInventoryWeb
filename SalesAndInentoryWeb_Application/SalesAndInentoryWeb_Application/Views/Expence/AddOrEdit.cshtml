            $("tr").each(function (indexTr) {
                if (isNaN(finding)) {
                    finding = 0;
                }
                var mm = +$(this).find('td:eq(3)').text();
                finding = finding + mm

                $("#Total").val(finding);
            })
        }
        function reset()
