@model IList<SalesAndInentoryWeb_Application.Models.PartiesViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/ideal.cshtml";
}

@using (Html.BeginForm("ExportToExcel", "Utilities", FormMethod.Post))
{
    <br />
    <br />
    <h2>
        Export Data To Excel
    </h2>
    <table style="background-color: white; width: 100%;">
        <tr>
            <th style="border: 1px solid black; text-align: left; width: 20%; padding-left: 20px;">
                Name
            </th>
            <th style="border: 2px solid black; text-align: center; width: 20%">
                Email
            </th>
            <th style="border: 2px solid black; text-align: center; width: 20%">
                Age
            </th>
            <th style="border: 2px solid black; text-align: center; width: 20%">
                Address
            </th>
            <th style="border: 2px solid black; text-align: center; width: 20%">
                Department
            </th>

        </tr>
        @foreach (var itm in Model)
        {
            <tr>
                <td style="padding-left: 20px;">
                    @Html.DisplayFor(m => itm.ParytName)
                </td>
                <td style="padding-left: 20px;">
                    @Html.DisplayFor(m => itm.BIllingAddress)
                </td>
                <td style="padding-left: 20px;">
                    @Html.DisplayFor(m => itm.ContactNo)
                </td>
                <td style="padding-left: 50px;">
                    @Html.DisplayFor(m => itm.EmailID)
                </td>
                <td style="padding-left: 50px;">
                    @Html.DisplayFor(m => itm.State)
                </td>
            </tr>
        }
        <tr>

            <td colspan="4">
                <br />
                <br />
                <input type="submit" value="Export to Excel" class="button" />
            </td>
        </tr>
    </table>
}
