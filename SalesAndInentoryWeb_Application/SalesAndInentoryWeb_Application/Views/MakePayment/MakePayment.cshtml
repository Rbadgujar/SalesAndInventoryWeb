<link href="~/Content/DataTables/css/dataTables.bootstrap.css" rel="stylesheet" />
@section scripts{
    <script src="~/scripts/DataTables/jquery.dataTables.min.js"></script>
    <script src="~/scripts/DataTables/dataTables.bootstrap.min.js"></script>

    <script>
                     var Popup, dataTable;
        $(document).ready(function () {
			dataTable = $("#makepayment").DataTable({
                "ajax": {

                    "url": "/MakePayment/makykdata",
                    "type": "GET",
                    "datatype": "json"
                },
                "columns": [
                    { "data": "ID" },
                    { "data": "PrincipleAmount" },
					{ "data": "InterestAmount" },
					{ "data": "Date"},
                    { "data": "AccountName" },
					{ "data": "TotalAmount" },
					{ "data": "ID", "render": function (data) {
                        return "<a class='btn btn-default btn-sm'  href=@Url.Action("MakePayment", "MakePayment")/" + data + "><i class='fa fa-pencil'></i> Edit</a><a class='btn btn-danger btn-sm' style='margin-left:5px' onclick=Delete("+data+")><i class='fa fa-trash'></i> Delete</a>";
                    },
                        "orderable": false,
                        "searchable":false,
                        "width":"150px"
                    }

                ],
                "language": {

                    "emptyTable" : "No data found, Please click on <b>Add New</b> Button"
                }
            });
        });




                    function PopupForm(url) {
                        var formDiv = $('<div/>');
                        $.get(url)
                        .done(function (response) {
                            formDiv.html(response);

                            Popup = formDiv.dialog({
                                autoOpen: true,
                                resizable: false,
                                title: 'Fill Bank Details',
                                height: 500,
                                width: 700,
                                close: function () {
                                    Popup.dialog('destroy').remove();
                                }

                            });
                        });
                    }
                   
                    function SubmitForm(form) {
                        $.validator.unobtrusive.parse(form);
                        if($(form).valid()){
                            $.ajax({
                                type : "POST",
                                url : form.action,
                                data : $(form).serialize(),
                                success : function (data) {
                                    if(data.success)
                                    {
                                        Popup.dialog('close');
                                        dataTable.ajax.reload();

                                        $.notify(data.message,{
                                            globalPosition :"top center",
                                            className : "success"
                                        })

                                    }
                                }
                            });
                        }
                        return false;
                    }
                    $("#AccountName").change(function () {
                        var fruitId = $(this).find("option:selected").val();
                      
                        if (fruitId != "") {
                            $.ajax({
                                type: "POST",
                                url: "/Makepayment/GetFruitName",
                                data: "id=" + fruitId,
                                success: function (response) {
                                    if (response != "") {
                                        $("#LoanAmount").val(response);
                                    } else {
                                        $("#LoanAmount").val('');
                                    }
                                }
                            });
                        } else {
                            $("#LoanAmount").val('');
                        }
                    });

                    function cal() {
                      
                        var tot = parseFloat($('#LoanAmount').val()) - parseFloat($('#PrincipleAmount').val());
                        var tot1 = tot + parseFloat($('#InterestAmount').val());

                        $("#TotalAmount").val(tot1);
                    }

                    function Delete(id) {
                        if(confirm('Are You Sure to Delete this Employee Record ?'))
                        {
                            $.ajax({
                                type: "POST",
                                url: '@Url.Action("Delete", "MakePayment")/' + id,
                                success: function (data) {
                                    if (data.success)
                                    {
                                        dataTable.ajax.reload();

                                        $.notify(data.message, {
                                            globalPosition: "top center",
                                            className: "success"
                                        })

                                    }
                                }

                            });
                        }
                    }
    </script>
}

























 






  
